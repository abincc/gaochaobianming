<resources>

	<!-- Base application theme. -->
	<style name="AppTheme"
	       parent="Theme.AppCompat.DayNight.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowBackground">@color/grayF4</item>
		<item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
	</style>

	<declare-styleable name="CircleImageView1">
		<attr name="border_width" format="dimension" />
		<attr name="border_color" format="color" />
		<attr name="border_overlay" format="boolean" />
	</declare-styleable>

	<style name="baseTextView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">14sp</item>
	</style>
	<style name="mainNavRb">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_marginTop">7dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:button">@null</item>
		<item name="android:drawablePadding">3dp</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:textColor">@color/selector_gray999_blue</item>
		<item name="android:textSize">10sp</item>
	</style>
	<style name="linearLayout_personal">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:paddingBottom">14dp</item>
		<item name="android:paddingTop">13dp</item>
		<item name="android:orientation">vertical</item>
		<item name="android:gravity">center_horizontal</item>
	</style>
	<style name="textView_Classify">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">2dp</item>
		<item name="android:textColor">#99ffffff</item>
	</style>
	<style name="baseRelative_item">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">44dp</item>
		<item name="android:paddingLeft">@dimen/dp_15</item>
		<item name="android:paddingRight">@dimen/dp_15</item>
		<item name="android:background">@drawable/selector_base_item</item>
	</style>
	<style name="textView_personal_item">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/sp_14</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:textColor">#333333</item>
	</style>
	<style name="imageView_next">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:src">@drawable/select_personal_arrow</item>
	</style>
	<style name="textView_Personal_Order">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_gravity">bottom</item>
		<item name="android:textColor">#666666</item>
		<item name="android:textSize">12sp</item>
		<item name="android:gravity">center_horizontal|bottom</item>
		<item name="android:drawablePadding">5dp</item>
		<item name="android:drawableTop">@drawable/ic_center_payfor</item>
		<item name="android:paddingBottom">12dp</item>
		<item name="android:paddingTop">14dp</item>
		<item name="android:background">@drawable/selector_base_item</item>
	</style>

	<style name="btn_blue_match">
		<item name="android:textSize">14sp</item>
		<item name="android:layout_marginLeft">15dp</item>
		<item name="android:layout_marginRight">15dp</item>
		<item name="android:background">@drawable/selector_btn_blue</item>
		<item name="android:textColor">#fff</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">44dp</item>
	</style>

	<style name="editText_right">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:gravity">right|center_vertical</item>
		<item name="android:textSize">@dimen/sp_14</item>
		<item name="android:background">@null</item>
		<item name="android:textColorHint">@color/gray999</item>
		<item name="android:textColor">@color/gray666</item>
		<item name="android:singleLine">true</item>
	</style>
		<!--checkbox-->
	<style name="baseCheckBox">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:button">@null</item>
		<item name="android:drawableLeft">@drawable/selector_checkbox_address</item>
		<item name="android:textColor">@color/selector_gray666_blue</item>
		<item name="android:drawablePadding">6dp</item>
		<item name="android:textSize">@dimen/sp_12</item>
		<item name="android:paddingLeft">@dimen/dp_15</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	/**********************************************************************************************************************************/

	<style name="etSearch">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">30dp</item>
		<item name="android:background">@drawable/shape_big_corner_white_solid</item>
		<item name="android:drawableLeft">@drawable/index_icon_search_nor</item>
		<item name="android:drawablePadding">7dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:singleLine">true</item>
		<item name="android:textColorHint">@color/gray999</item>
		<item name="android:textColor">@color/gray333</item>
		<item name="android:textSize">13sp</item>
	</style>
	<style name="etInput">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">49dp</item>
		<item name="android:layout_marginLeft">15dp</item>
		<item name="android:layout_marginRight">15dp</item>
		<item name="android:background">@color/white</item>
		<item name="android:drawablePadding">7.5dp</item>
		<item name="android:paddingLeft">7.5dp</item>
		<item name="android:paddingRight">12.5dp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:textColor">@color/gray333</item>
		<item name="android:textColorHint">@color/gray999</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="umeng_socialize_shareboard_animation">
		<item name="android:windowEnterAnimation">@anim/umeng_socialize_fade_in</item>
		<item name="android:windowExitAnimation">@anim/umeng_socialize_fade_out</item>
	</style>

	<style name="tabTextSize" parent="TextAppearance.AppCompat.Widget.ActionMode.Title.Inverse">
		<item name="android:textSize">@dimen/sp_16</item>
		<!--控制字体大小写的，TabLayout里默认是true-->
		<item name="android:textAllCaps">false</item>
	</style>
	<style name="CustomDialog"
	       parent="Theme.AppCompat.Dialog">
		<item name="android:backgroundDimEnabled">false</item>
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>


</resources>
