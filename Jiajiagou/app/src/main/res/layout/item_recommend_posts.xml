<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_avatar_posts"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_avatar_posts"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="11dp"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:text="xxxxx"
                android:textColor="@color/gray333"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/tv_name_plate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_11"
                android:text="xxxxx"
                android:textColor="@color/green_plate_name"
                android:textSize="@dimen/dp_12"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title_posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="3dp"
            android:text="xxxxx"
            android:textColor="@color/gray333"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:id="@+id/tv_content_posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:lineSpacingExtra="5dp"
            android:maxLines="2"
            android:text="xxx"
            android:textColor="@color/gray666"
            android:textSize="@dimen/sp_14"/>

        <!--<ImageView-->
            <!--android:id="@+id/iv_content_posts"-->
            <!--android:visibility="visible"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="200dp"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:scaleType="centerCrop"/>-->
        <com.lzy.ninegrid.NineGridView
            android:id="@+id/ngv_comment"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ngv_gridSpacing="@dimen/dp_10"
            app:ngv_mode="grid"
            app:ngv_singleImageRatio="1.4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_readnum_posts"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="xxx"
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/sp_12"/>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/gray999"/>

                <TextView
                    android:id="@+id/tv_commentnum_posts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxx"
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/sp_12"/>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/gray999"/>

                <TextView
                    android:id="@+id/tv_likenum_posts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxx"
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_date_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="11111111111111"
                android:textColor="@color/gray999"
                android:textSize="@dimen/sp_12"/>
        </RelativeLayout>
    </LinearLayout>

    <!--<ImageView-->
        <!--android:id="@+id/iv_line"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="8dp"-->
        <!--android:background="@color/grayF4" />-->

</LinearLayout>