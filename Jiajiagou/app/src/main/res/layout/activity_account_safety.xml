<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/grayF4"
              android:orientation="vertical">
	<include layout="@layout/layout_header"/>
	<RelativeLayout android:id="@+id/rl_change_pwd"
	                style="@style/baseRelative_item">
		<TextView style="@style/textView_personal_item"
		          android:text="修改密码"
		/>
		<ImageView style="@style/imageView_next"/>
	</RelativeLayout>

	<RelativeLayout android:id="@+id/rl_change_phone"
	                style="@style/baseRelative_item"
	                android:layout_marginTop="@dimen/dp_1">
		<TextView style="@style/textView_personal_item"
		          android:text="修改绑定手机号"
		/>
		<ImageView style="@style/imageView_next"/>
	</RelativeLayout>
</LinearLayout>