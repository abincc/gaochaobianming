<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:orientation="vertical"
			  android:layout_height="match_parent">
	<include layout="@layout/layout_header"/>

	<android.support.v4.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginLeft="@dimen/dp_15"
			android:layout_marginRight="@dimen/dp_15"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="个人专长"
				android:textSize="@dimen/sp_15"
				android:layout_marginTop="@dimen/dp_15"
				android:layout_marginBottom="@dimen/dp_15"/>
			<EditText
				android:id="@+id/et_expertise"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/white"
				android:hint="请输入您的特长"
				android:textColorHint="@color/gray999"
				android:textColor="@color/gray333"
				android:gravity="left|top"
				android:textSize="@dimen/sp_14"
				android:minLines="4"
				android:maxLines="10"
				android:padding="@dimen/dp_10"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="工作意向"
				android:textSize="@dimen/sp_15"
				android:layout_marginTop="@dimen/dp_15"
				android:layout_marginBottom="@dimen/dp_15"/>
			<EditText
				android:id="@+id/et_work_intention"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/white"
				android:hint="请输入您的工作意向"
				android:textColorHint="@color/gray999"
				android:textColor="@color/gray333"
				android:gravity="left|top"
				android:textSize="@dimen/sp_14"
				android:minLines="4"
				android:maxLines="10"
				android:padding="@dimen/dp_10"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="工作时间"
				android:textSize="@dimen/sp_15"
				android:layout_marginTop="@dimen/dp_15"
				android:layout_marginBottom="@dimen/dp_15"/>
			<com.cnsunrun.jiajiagou.common.widget.view.HighLightEditText
				android:id="@+id/et_start_time"
				android:layout_width="match_parent"
				android:layout_height="49dp"
				android:background="@color/white"
				android:textColor="@color/gray999"
				android:textColorHint="@color/gray999"
				android:editable="false"
				android:hint="开始时间"
				android:padding="@dimen/dp_10"
				android:textSize="@dimen/sp_14"
				app:rightDrawable="@drawable/date_btn_select_nor"
				android:layout_marginBottom="@dimen/dp_10"/>
			<com.cnsunrun.jiajiagou.common.widget.view.HighLightEditText
				android:id="@+id/et_end_time"
				android:layout_width="match_parent"
				android:layout_height="49dp"
				android:background="@color/white"
				android:textColor="@color/gray999"
				android:textColorHint="@color/gray999"
				android:editable="false"
				android:hint="截止时间"
				android:padding="@dimen/dp_10"
				android:textSize="@dimen/sp_14"
				app:rightDrawable="@drawable/date_btn_select_nor"/>
			
			<Button
				android:id="@+id/btn_commit_apply"
				android:layout_width="match_parent"
				android:layout_height="49dp"
				android:background="@drawable/selector_btn_blue"
				android:text="提交申请"
				android:textSize="@dimen/sp_14"
				android:layout_marginTop="@dimen/dp_20"
				android:layout_marginBottom="@dimen/dp_20"
				android:textColor="@color/white"/>
		</LinearLayout>
	</android.support.v4.widget.NestedScrollView>
</LinearLayout>