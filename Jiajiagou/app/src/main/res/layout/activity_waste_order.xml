<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<include layout="@layout/layout_header"/>

	<FrameLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/fl_address"
		android:background="@color/white"
		>
		<RelativeLayout android:id="@+id/rl_address"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/white"
			android:padding="@dimen/dp_15">

			<TextView android:id="@+id/tv_name"
				style="@style/baseTextView"
				android:text="张先森"
				android:textColor="@color/gray333"
				android:textSize="@dimen/sp_15"
				/>
			<TextView style="@style/baseTextView"
				android:layout_alignBottom="@+id/tv_name"
				android:layout_marginLeft="18.5dp"
				android:layout_toRightOf="@+id/tv_name"
				android:drawableLeft="@drawable/information_icon_phone_nor"
				android:drawablePadding="@dimen/dp_5"
				android:text="1899898989989"
				android:id="@+id/tv_mobile"
				android:textColor="@color/gray666"

				/>
			<TextView android:id="@+id/tv_loc"
				style="@style/baseTextView"
				android:layout_below="@+id/tv_name"
				android:layout_marginTop="10dp"
				android:drawableLeft="@drawable/information_icon_address_nor"
				android:drawablePadding="6dp"
				android:text="武汉市洪山区南湖时尚城"
				android:textColor="@color/gray999"
				/>
			<ImageView style="@style/imageView_next"/>
		</RelativeLayout>
		<TextView style="@style/baseTextView"
			android:text="请选择收货地址"
			android:id="@+id/tv_loc_empty"
			android:visibility="gone"
			android:textSize="22sp"
			android:layout_gravity="center"
			/>
	</FrameLayout>

	<com.cnsunrun.jiajiagou.common.widget.view.HighLightEditText
		android:id="@+id/et_report_date"
		android:layout_width="match_parent"
		android:layout_marginTop="10dp"
		android:layout_height="49dp"
		android:background="@color/white"
		android:textColor="@color/gray999"
		android:textColorHint="@color/gray999"
		android:editable="false"
		android:hint="请选择废品预约上门收货时间"
		android:padding="@dimen/dp_10"
		android:textSize="@dimen/sp_14"
		app:rightDrawable="@drawable/date_btn_select_nor"
		android:layout_marginBottom="@dimen/dp_10"/>

	<EditText android:id="@+id/et_desc"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="1dp"
		android:background="@color/white"
		android:gravity="top"
		android:hint="请描述你对应的废品详情"
		android:maxLength="300"
		android:minLines="7"
		android:paddingLeft="@dimen/bordePadding125"
		android:paddingRight="@dimen/bordePadding125"
		android:paddingTop="17.5dp"
		android:textColor="@color/gray333"
		android:textColorHint="@color/gray999"
		android:textSize="@dimen/tv_xm_14"/>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/recycler"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:paddingLeft="7.5dp"
		android:paddingRight="7.5dp"/>

	<TextView style="@style/baseTextView"
		android:layout_width="match_parent"
		android:background="@color/white"
		android:paddingBottom="15dp"
		android:paddingLeft="@dimen/bordePadding125"
		android:paddingTop="6dp"
		android:text="最多可上传9张图片"
		android:textColor="@color/gray999"
		android:textSize="@dimen/tv_xs_11"/>

</LinearLayout>