<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/layout_header"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/blockHeight44"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/bordePadding125"
                android:paddingRight="@dimen/bordePadding125">

                <TextView
                    android:id="@+id/tv_plate"
                    style="@style/baseTextView"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="板块"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/tv_xm_14"/>

                <TextView
                    android:id="@+id/tv_plate_result"
                    style="@style/baseTextView"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tv_plate"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/gray666"
                    android:textSize="@dimen/tv_xm_14"/>

                <TextView
                    android:id="@+id/tv_select_plate"
                    style="@style/baseTextView"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:drawablePadding="16.5dp"
                    android:drawableRight="@drawable/selector_btn_send_posts"
                    android:gravity="center_vertical"
                    android:text="选择板块"
                    android:textColor="@color/selector_gray666_blue"
                    android:textSize="@dimen/tv_xm_14"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/grayF4"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/blockHeight44"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/baseTextView"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/bordePadding125"
                    android:layout_marginRight="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:text="标题"
                    android:textColor="@color/gray333"/>

                <EditText
                    android:id="@+id/et_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入标题"
                    android:paddingRight="@dimen/dp_15"
                    android:textSize="@dimen/tv_xm_14"/>
            </LinearLayout>

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="top"
                android:hint="请输入相应内容"
                android:minLines="7"
                android:paddingLeft="@dimen/bordePadding125"
                android:paddingRight="@dimen/bordePadding125"
                android:paddingTop="17.5dp"
                android:textColor="@color/gray333"
                android:textColorHint="@color/gray999"
                android:textSize="@dimen/tv_xm_14"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="7.5dp"
                android:paddingRight="7.5dp"/>

            <TextView
                style="@style/baseTextView"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingBottom="15dp"
                android:paddingLeft="@dimen/bordePadding125"
                android:paddingTop="6dp"
                android:text="最多可上传9张图片"
                android:textColor="@color/gray999"
                android:textSize="@dimen/tv_xs_11"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>