<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <include layout="@layout/layout_header"/>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view"
            android:layout_above="@+id/ll1"
            android:layout_gravity="bottom"
            android:background="@color/grayDDD"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/commonHeight44"
            android:id="@+id/ll1"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal"
            android:translationZ="5dp"
            android:weightSum="8">

            <CheckBox
                android:id="@+id/cb_collect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:button="@null"
                android:drawableTop="@drawable/selector_collect_star"
                android:gravity="center"
                android:paddingTop="5dp"
                android:textSize="12sp"
                android:text="收藏 "
                android:textColor="@color/selector_gray666_blue"/>
            <!--<TextView android:id="@+id/tv_collect"-->
            <!--style="@style/baseTextView"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1.5"-->
            <!--android:drawablePadding="4dp"-->
            <!--android:drawableTop="@drawable/selector_collect_star"-->
            <!--android:gravity="center"-->
            <!--android:paddingTop="5dp"-->
            <!--android:text="收藏 "-->
            <!--android:textColor="@color/selector_gray666_blue"/>-->

            <TextView
                android:id="@+id/tv_share"
                style="@style/baseTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:layout_weight="1.5"
                android:drawableTop="@drawable/selector_share_icon"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="分享 "
                android:textColor="@color/selector_gray666_blue"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grayDDD"/>

            <TextView
                android:id="@+id/tv_add_cart"
                style="@style/baseTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center"
                android:text="加入购物车"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/tv_xm_14"/>

            <TextView
                android:id="@+id/tv_buy"
                style="@style/baseTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:background="@drawable/selector_btn_blue"
                android:gravity="center"
                android:text="立即购买"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_xm_14"/>
        </LinearLayout>
        <com.cnsunrun.jiajiagou.common.base.CZSwipeRefreshLayout android:layout_width="match_parent"
                                                                 android:layout_height="match_parent"
                                                                 android:id="@+id/swipe_refresh_layout"
        >
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_above="@+id/view"
            android:fillViewport="true"
            android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="vertical">

                    <!--<include layout="@layout/layout_header"/>-->

                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:background="#000"
                        app:image_scale_type="fit_xy"
                        app:indicator_drawable_selected="@drawable/shape_orange_dot"
                        app:indicator_drawable_unselected="@drawable/shape_white_dot"
                        app:indicator_height="6dp"
                        app:indicator_margin="6dp"
                        app:indicator_width="6dp"/>

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/baseTextView"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="19dp"
                        android:text="商品名称商品名称商品名称"
                        android:textColor="@color/black"
                        android:textSize="@dimen/tv_xm_14"/>

                    <TextView
                        android:id="@+id/tv_desc"
                        style="@style/baseTextView"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="7dp"
                        android:lineSpacingExtra="3dp"
                        android:text="商品描述商品描述描述商品描述商品描述述商品描述"
                        android:textColor="@color/gray666"
                        android:textSize="@dimen/tv_s_12"/>

                    <TextView
                        android:id="@+id/tv_price"
                        style="@style/baseTextView"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="￥49.90"
                        android:textColor="#ff5438"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/grayF4"/>

                    <net.lucode.hackware.magicindicator.MagicIndicator
                            android:id="@+id/magic_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grayF4"/>


                    <WebView
                        android:id="@+id/web_view"
                        android:layout_width="match_parent"
                        android:scrollbars="vertical"
                        android:layout_marginBottom="45dp"
                        android:layout_height="wrap_content"/>
                    <android.support.v7.widget.RecyclerView
                        android:visibility="gone"
                        android:background="@color/grayF4"
                        android:layout_marginBottom="45dp"
                        android:id="@+id/recycle_product_comment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        </com.cnsunrun.jiajiagou.common.base.CZSwipeRefreshLayout>
    </RelativeLayout>
</LinearLayout>