<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="horizontal"
              android:padding="@dimen/dp_10">

	<CheckBox android:id="@+id/checkbox"
	          style="@style/baseCheckBox"
	          android:layout_height="90dp"
	          android:layout_marginRight="10dp"
	          android:gravity="center_horizontal"
	          android:paddingLeft="@dimen/dp_5"
	          android:paddingRight="@dimen/dp_5"
	          android:visibility="visible"
	/>
	<ImageView
		android:id="@+id/iv_collect"
		android:layout_width="120dp"
		android:layout_height="90dp"
		android:scaleType="fitXY"
	/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/dp_10"
		android:orientation="vertical">

		<TextView
			android:id="@+id/tv_collect_title"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="4dp"
			android:ellipsize="end"
			android:maxLines="1"
			android:text="墨西哥牛油果"
			android:textColor="#000000"
			android:textSize="14sp"/>

		<TextView
			android:id="@+id/tv_collect_subTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:lineSpacingExtra="3dp"
			android:maxLines="2"
			android:paddingTop="6dp"
			android:text="时尚甜点，美味烘焙，榨汁酷饮是的是的是的是的所都是都是都是的设定设定是多少的设定是多少多岁的是 "
			android:textColor="@color/gray666"
			android:textSize="12dp"/>

		<TextView
			android:id="@+id/tv_collect_price"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="8dp"
			android:text="￥14.90"
			android:textColor="@color/collectPrice"
			android:textSize="15sp"
			android:textStyle="bold"/>

	</LinearLayout>

</LinearLayout>
