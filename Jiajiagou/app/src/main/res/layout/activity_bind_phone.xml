<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/grayF4"
              android:layout_height="match_parent">
<include layout="@layout/layout_header"/>
	<EditText style="@style/etInput"
	          android:layout_marginLeft="0dp"
	          android:layout_marginRight="0dp"
			  android:paddingLeft="15dp"
			  android:paddingRight="@dimen/dp_15"
	          android:hint="请输入原手机号"
	          android:textColorHint="@color/gray666"
	          android:id="@+id/et_phone"
	          android:inputType="phone"
	          android:maxLength="11"
	/>
	<RelativeLayout style="@style/baseRelative_item"
	                android:paddingRight="10dp"
	                android:layout_height="49dp"
	                android:paddingLeft="10dp"
	                android:layout_marginTop="@dimen/dp_1"
	>
		<EditText style="@style/etInput"
		          android:hint="请输入验证码"
				  android:layout_marginLeft="0dp"
		          android:layout_width="wrap_content"
		          android:textColorHint="@color/gray666"
		          android:id="@+id/et_code"
		/>
		<Button android:id="@+id/btn_getcode"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_alignParentRight="true"
		        android:background="@null"
		        android:text="获取验证码"
		        android:textColor="#3ba4fa"
		        android:textSize="14sp"/>

	</RelativeLayout>
</LinearLayout>