<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
                android:padding="@dimen/dp_15"
                android:background="@color/white"
              android:layout_height="wrap_content">
<ImageView android:layout_width="120dp"
           android:layout_height="90dp"
			android:src="@drawable/icon"
           android:scaleType="centerCrop"
           android:id="@+id/iv_imv"
/>
	<TextView style="@style/baseTextView"
	          android:text="保洁 ·"
	          android:layout_toRightOf="@+id/iv_imv"
	          android:layout_marginLeft="11dp"
	          android:layout_marginTop="5dp"
	          android:id="@+id/tv_name"
	          android:textColor="@color/black"
	          android:textStyle="bold"
		/>
		<TextView style="@style/baseTextView"
		          android:text="等待处理"
		          android:layout_toRightOf="@+id/tv_name"
		          android:layout_alignBottom="@+id/tv_name"
		          android:textColor="@color/black"
		          android:layout_marginLeft="3dp"
		          android:id="@+id/tv_dispose"
			/>

	<TextView style="@style/baseTextView"
				android:text="维修内容维修内容维修内容维修内容维修内容维修内容维修内容维修内"
	          android:layout_alignLeft="@+id/tv_name"
	          android:layout_below="@+id/tv_name"
	          android:layout_marginTop="@dimen/dp_10"
	          android:maxLines="2"
	          android:textColor="@color/gray666"
	          android:textSize="@dimen/sp_12"
	          android:id="@+id/tv_content"
		/>
	<Button android:layout_width="58dp"
	        android:layout_height="23dp"
			android:background="@drawable/selector_btn_blue"
	        android:layout_alignLeft="@+id/tv_content"
	        android:layout_alignBottom="@id/iv_imv"
	        android:text="取消"
	        android:textSize="@dimen/sp_12"
	        android:textColor="@color/white"
	        android:id="@+id/btn_cancel"
	/>
	<TextView style="@style/baseTextView"
				android:text="2017-10-20"
	          android:textSize="11sp"
	          android:textColor="@color/gray999"
	          android:layout_alignBottom="@id/iv_imv"
	          android:layout_alignParentRight="true"
	          android:id="@+id/tv_time"
		/>
</RelativeLayout>