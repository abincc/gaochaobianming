<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/grayF4"
              android:layout_height="wrap_content">
<RelativeLayout android:layout_width="match_parent"
                android:padding="@dimen/dp_15"
                android:background="@color/white"
                android:layout_height="wrap_content">
	
		<TextView style="@style/baseTextView"
		          android:textColor="@color/gray333"
		          android:textSize="@dimen/sp_15"
		          android:text="张先森"
		          android:id="@+id/tv_name"
		/>
		<TextView style="@style/baseTextView"
		          android:textColor="@color/gray666"
		          android:layout_alignBottom="@+id/tv_name"
		          android:layout_toRightOf="@+id/tv_name"
		          android:layout_marginLeft="18.5dp"
		          android:text="1899898989989"
		          android:drawablePadding="@dimen/dp_5"
		          android:drawableLeft="@drawable/information_icon_phone_nor"
		          android:id="@+id/tv_phone"
		/>
	<TextView style="@style/baseTextView"
	          android:textColor="@color/gray999"
	          android:text="武汉市洪山区南湖时尚城"
	          android:id="@+id/tv_loc"
	          android:drawableLeft="@drawable/information_icon_address_nor"
	          android:drawablePadding="6dp"
	          android:layout_below="@+id/tv_name"
	          android:layout_marginTop="10dp"
	/>
</RelativeLayout>
	<RelativeLayout style="@style/baseRelative_item"
	                android:layout_height="39dp"
		android:paddingLeft="0dp"
	                android:layout_marginTop="@dimen/dp_1"
	>
<CheckBox style="@style/baseCheckBox"
          android:layout_height="match_parent"
	android:layout_centerVertical="true"
          android:text="默认"
          android:paddingRight="80dp"
          android:id="@+id/checkbox"
/>
		<TextView style="@style/baseTextView"
		          android:layout_height="match_parent"
		          android:gravity="center"
					android:text="删除"
		          android:layout_alignParentRight="true"
		          android:layout_centerVertical="true"
		          android:id="@+id/tv_delete"
		          android:textColor="@color/selector_gray333_blue"
			/>
		<TextView style="@style/baseTextView"
					android:text="编辑"
                  android:gravity="center"
		          android:layout_toLeftOf="@+id/tv_delete"
		          android:layout_centerVertical="true"
		          android:layout_marginRight="@dimen/dp_20"
		          android:layout_height="match_parent"
		          android:textColor="@color/selector_gray333_blue"
		          android:id="@+id/tv_editor"
			/>

	</RelativeLayout>

</LinearLayout>