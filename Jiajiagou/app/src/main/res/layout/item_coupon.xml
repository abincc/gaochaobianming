<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
	<RelativeLayout android:layout_width="match_parent"
	                android:layout_height="45dp"
	                android:background="@drawable/coupon_bg_1"
	>
		<TextView style="@style/baseTextView"
		          android:text="大唐足浴"
		          android:layout_centerVertical="true"
		          android:textSize="13sp"
		          android:textColor="@color/gray333"
		          android:layout_marginLeft="15dp"
		          android:id="@+id/tv_name"
		/>
		<TextView style="@style/baseTextView"
		          android:textColor="@color/gray999"
		          android:layout_alignParentRight="true"
		          android:layout_marginRight="15dp"
		          android:id="@+id/tv_time"
		          android:layout_centerVertical="true"
		          android:text="2017.0202"
		/>
	</RelativeLayout>
	<RelativeLayout android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingLeft="@dimen/dp_15"
	                android:background="@drawable/coupon_bg_2"
	>

		<TextView style="@style/baseTextView"
		          android:text="10.00"
		          android:textColor="@color/gray333"
		          android:textSize="30sp"
		          android:layout_marginTop="15dp"
		          android:gravity="bottom"
		          android:id="@+id/tv_money"

		/>
		<TextView style="@style/baseTextView"
		          android:text="消費100可用"
		          android:layout_toRightOf="@+id/tv_money"
		          android:layout_alignBottom="@+id/tv_money"
		          android:layout_marginLeft="4dp"
		          android:id="@+id/tv_miniTitle"
		          android:layout_marginBottom="5dp"
		/>
		<TextView style="@style/baseTextView"
		          android:textSize="10sp"
		          android:textColor="@color/gray999"
		          android:layout_below="@+id/tv_money"
		          android:text="蘇果可用"
		          android:layout_marginTop="13dp"
		          android:layout_marginBottom="13dp"
		          android:id="@+id/tv_desc"
		/>

	</RelativeLayout>
</LinearLayout>