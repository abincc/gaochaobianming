<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:paddingBottom="10dp"
              android:id="@+id/ll_root_product"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/help_btn_delete_nor"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_avatar"
            android:text="x"
            android:textColor="@color/gray333"
            android:textSize="@dimen/sp_15"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_20"
        android:lineSpacingExtra="5dp"
        android:maxLines="2"
        android:text="xxx"
        android:textColor="@color/gray333"
        android:textSize="@dimen/sp_12"/>



    <com.lzy.ninegrid.NineGridView
        android:id="@+id/ngv_comment"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        app:ngv_gridSpacing="@dimen/dp_10"
        app:ngv_mode="grid"
        app:ngv_singleImageRatio="1.4"/>

    <LinearLayout
        android:id="@+id/ll_reply"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:padding="10dp"
        android:background="@color/grayF4"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家回复"
            android:textSize="12dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/gray666"/>
        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家回复"
            android:textSize="12dp"
            android:textColor="@color/gray666"/>
    </LinearLayout>



</LinearLayout>