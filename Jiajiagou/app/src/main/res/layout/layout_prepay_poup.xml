<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
	<View
		android:id="@+id/gray_zone"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="#66000000"/>
	<LinearLayout android:layout_width="match_parent"
	                android:layout_height="wrap_content"
				android:orientation="vertical"
	>
		<LinearLayout android:layout_width="match_parent"
		              android:layout_height="wrap_content"
		              android:orientation="vertical"
		              android:background="@color/white"

		              android:paddingLeft="@dimen/dp_15"
		              android:paddingTop="20dp"
		><TextView style="@style/baseTextView"
		           android:text="订单号:"
		           android:id="@+id/tv_order_no"
		           android:textColor="@color/gray333"
		/>
			<LinearLayout android:layout_width="match_parent"
			              android:layout_height="wrap_content"
			              android:orientation="horizontal"
			              android:layout_marginTop="13dp"
			>
				<TextView style="@style/baseTextView"
				          android:text="合计："
				          android:textColor="@color/gray666"
				/>
				<TextView style="@style/baseTextView"
				          android:text=""
				          android:id="@+id/tv_price"
				          android:textStyle="bold"
				          android:textColor="@color/shop_cart_price"
				/>
			</LinearLayout>

			<TextView style="@style/baseTextView"
			          android:text="支付方式"
			          android:textSize="13sp"
			          android:textColor="@color/gray666"
			          android:layout_marginTop="34dp"
			          android:layout_marginBottom="@dimen/dp_15"
			/>
		</LinearLayout>
		<RadioGroup android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="vertical"
		            android:background="@color/grayF4"
		            android:id="@+id/rg_pay"
		>
			<RadioButton android:layout_width="match_parent"
			             android:layout_height="44dp"
			             android:button="@null"
			             android:gravity="center_vertical"
			             android:drawableRight="@drawable/selector_pay_toggle"
			             android:paddingLeft="@dimen/dp_15"
			             android:paddingRight="@dimen/dp_15"
			             android:text="支付宝支付"
			             android:textColor="@color/gray333"
			             android:textSize="@dimen/sp_14"
			             android:drawableLeft="@drawable/alipay"
			             android:drawablePadding="@dimen/dp_5"
			             android:background="@drawable/selector_base_item"
			             android:id="@+id/rb_ali_pay"
			/>

			<RadioButton android:layout_width="match_parent"
			             android:layout_height="44dp"
			             android:button="@null"
			             android:gravity="center_vertical"
			             android:drawableRight="@drawable/selector_pay_toggle"
			             android:paddingLeft="@dimen/dp_15"
			             android:paddingRight="@dimen/dp_15"
			             android:text="微信支付"
			             android:textSize="@dimen/sp_14"
			             android:drawableLeft="@drawable/weixinpay"
			             android:drawablePadding="@dimen/dp_5"
			             android:background="@drawable/selector_base_item"
			             android:layout_marginTop="@dimen/dp_1"
			             android:id="@+id/rb_wei_pay"
			             android:textColor="@color/gray333"
			/>

			<RadioButton android:layout_width="match_parent"
			             android:layout_height="44dp"
			             android:button="@null"
			             android:gravity="center_vertical"
			             android:drawableRight="@drawable/selector_pay_toggle"
			             android:paddingLeft="@dimen/dp_15"
			             android:paddingRight="@dimen/dp_15"
			             android:text="货到付款"
			             android:textSize="@dimen/sp_14"
			             android:background="@drawable/selector_base_item"
			             android:layout_marginTop="@dimen/dp_1"
			             android:id="@+id/rb_delivery_pay"
			             android:textColor="@color/gray333"
			/>
		</RadioGroup>


		<Button android:id="@+id/btn_confirm"
		        style="@style/btn_blue_match"
		        android:layout_alignParentBottom="true"
		        android:layout_marginLeft="0dp"
		        android:layout_marginRight="0dp"
		        android:text="去付款"
		/>
	</LinearLayout>
</LinearLayout>