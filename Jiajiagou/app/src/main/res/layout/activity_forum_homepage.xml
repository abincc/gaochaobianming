<?xml version="1.0" encoding="utf-8"?>
<com.cnsunrun.jiajiagou.common.base.CZSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                         xmlns:app="http://schemas.android.com/apk/res-auto"
                                                         android:layout_width="match_parent"
                                                         android:id="@+id/swipe_refresh_layout"
                                                         android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="@color/colorPrimary"
            android:paddingTop="@dimen/header_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:scaleType="center"
                    android:src="@drawable/selector_btn_back"/>

                <ImageView
                    android:id="@+id/iv_news"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:scaleType="center"
                    android:src="@drawable/selector_btn_news"/>

                <EditText
                    android:id="@+id/et_search"
                    style="@style/etSearch"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/iv_news"
                    android:layout_toRightOf="@id/iv_back"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="论坛搜索"
                    android:imeOptions="actionSearch"/>
            </RelativeLayout>
        </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <com.youth.banner.Banner
                        android:id="@+id/banner_forum"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:background="#000"
                        app:image_scale_type="fit_xy"
                        app:indicator_drawable_selected="@drawable/shape_orange_dot"
                        app:indicator_drawable_unselected="@drawable/shape_orange_dot"
                        app:indicator_height="6dp"
                        app:indicator_margin="6dp"
                        app:indicator_width="6dp"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_forum_plate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingBottom="3dp"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/grayF4">

                        <TextView
                            android:id="@+id/tv_plate_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="查看全部板块"
                            android:textSize="@dimen/sp_12"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:text="全部帖子"
                            android:textColor="#111"
                            android:textSize="@dimen/sp_15"/>
                    </FrameLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grayF4"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_forum_posts"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="20dp"/>



                </LinearLayout>


            </android.support.v4.widget.NestedScrollView>

            <LinearLayout
                android:id="@+id/ll_btn_send_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="18dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/forum_bg_posting_nor"
                android:elevation="3dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/forum_icon_posting_nor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发帖"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
    </LinearLayout>

</com.cnsunrun.jiajiagou.common.base.CZSwipeRefreshLayout>