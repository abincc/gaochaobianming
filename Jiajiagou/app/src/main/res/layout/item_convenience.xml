<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
	    android:layout_width="match_parent"
	    android:id="@+id/fl_1"
	    android:layout_height="225dp">

        <ImageView
	        android:id="@+id/iv_imv"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:scaleType="fitXY"
        />



        <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#59000000"
	        android:layout_gravity="bottom"
	        android:paddingTop="7dp"
	        android:paddingBottom="5dp"
           >

            <TextView
                android:id="@+id/tv_convenience_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/white"
                android:text="@string/convenience_contact_title"/>

            <TextView
                android:id="@+id/tv_convenience_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text="1388888888888"
                android:layout_alignLeft="@id/tv_convenience_title"
                android:layout_below="@id/tv_convenience_title"
                android:layout_marginTop="3dp"
                android:textColor="@color/white"/>

        </RelativeLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_20"
        android:background="@color/white">

        <TextView
	        android:id="@+id/tv_convenience_companyName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/dp_15"
	        android:textSize="@dimen/sp_18"
	        android:textColor="@color/gray333"
	        android:layout_marginLeft="@dimen/dp_15"
	        android:text="某某某家政公司"/>

        <TextView
	        android:id="@+id/tv_convenience_companyProfile"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/dp_10"
	        android:layout_marginLeft="@dimen/dp_15"
	        android:lineSpacingExtra="5dp"
	        android:textColor="@color/gray666"
	        android:textSize="@dimen/sp_14"
	        android:paddingRight="@dimen/dp_15"
	        android:text="传统的保洁、搬家、保姆等项目不断细分，月嫂、陪护、聊天、理财、保健等服务不断成为家政服务的主要内容"/>

    </LinearLayout>
    <ImageView android:id="@+id/iv_call"
               android:layout_width="38dp"
               android:layout_height="38dp"
               android:layout_alignParentEnd="true"
               android:layout_alignParentRight="true"
               android:layout_marginTop="206dp"
               android:layout_marginEnd="11dp"
               android:layout_marginRight="11dp"
               android:src="@drawable/select_convenience_call"/>
</RelativeLayout>
