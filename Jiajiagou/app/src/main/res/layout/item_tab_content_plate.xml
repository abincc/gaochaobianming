<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_marginBottom="@dimen/dp_8">

    <!--<ImageView-->
        <!--android:id="@+id/iv_line"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="8dp"-->
        <!--android:background="@color/grayF4" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_avatar_posts"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/fragmentation_help"/>

            <TextView
                android:id="@+id/tv_name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@+id/iv_avatar_posts"
                android:text="xxxxx"
                android:textColor="@color/gray333"
                android:textSize="@dimen/sp_15"/>


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title_posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="12dp"
            android:text="xxxxx"
            android:textColor="@color/gray333"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:id="@+id/tv_content_posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:lineSpacingExtra="@dimen/dp_5"
            android:maxLines="2"
            android:text="xxx"
            android:textColor="@color/gray666"
            android:textSize="@dimen/sp_14"/>

        <!--<ImageView-->
        <!--android:id="@+id/iv_content_posts"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="200dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:scaleType="centerCrop"/>-->
        <com.lzy.ninegrid.NineGridView
            android:id="@+id/nice_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:ngv_gridSpacing="@dimen/dp_10"
            app:ngv_maxSize="9"
            app:ngv_mode="grid"
            app:ngv_singleImageRatio="1.4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/ll_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_readnum_posts"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="xxx"
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/sp_12"/>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/gray999"/>

                <TextView
                    android:id="@+id/tv_commentnum_posts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxx"
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/sp_12"/>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/gray999"/>

                <TextView
                    android:id="@+id/tv_likenum_posts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxx"
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_date_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="11111111111111"
                android:textColor="@color/gray999"
                android:textSize="@dimen/sp_12"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>