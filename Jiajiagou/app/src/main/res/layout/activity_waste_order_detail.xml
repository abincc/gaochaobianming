<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/ll_container"
              android:orientation="vertical">
	<include layout="@layout/layout_header"/>
	<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
	                                            android:layout_height="match_parent">
		<LinearLayout android:layout_width="match_parent"
		              android:layout_height="match_parent"
		              android:background="@color/grayF4"
		              android:orientation="vertical"
		              android:paddingBottom="@dimen/dp_20"
		>

			<RelativeLayout android:id="@+id/rl_address"
			                android:layout_width="match_parent"
			                android:layout_height="wrap_content"
			                android:background="@color/white"
			                android:padding="@dimen/dp_15">

				<TextView android:id="@+id/tv_name"
				          style="@style/baseTextView"
				          android:text="张先森"
				          android:textColor="@color/gray333"
				          android:textSize="@dimen/sp_15"
				/>
				<TextView style="@style/baseTextView"
				          android:layout_alignBottom="@+id/tv_name"
				          android:layout_marginLeft="18.5dp"
				          android:layout_toRightOf="@+id/tv_name"
				          android:drawableLeft="@drawable/information_icon_phone_nor"
				          android:drawablePadding="@dimen/dp_5"
				          android:text="1899898989989"
				          android:id="@+id/tv_mobile"
				          android:textColor="@color/gray666"

				/>
				<TextView android:id="@+id/tv_loc"
				          style="@style/baseTextView"
				          android:layout_below="@+id/tv_name"
				          android:layout_marginTop="@dimen/dp_14"
				          android:drawableLeft="@drawable/information_icon_address_nor"
				          android:drawablePadding="6dp"
				          android:text="武汉市洪山区南湖时尚城"
				          android:textColor="@color/gray999"
				/>
			</RelativeLayout>
			<TextView style="@style/baseTextView"
			          android:layout_width="match_parent"
			          android:layout_marginTop="10dp"
			          android:background="@color/white"
			          android:padding="@dimen/dp_15"
			          android:text="订单编号"
			          android:id="@+id/tv_order_no"
			          android:textColor="@color/gray333"
			/>
			<RelativeLayout style="@style/baseRelative_item"
			                android:background="@color/white"
			>
				<TextView style="@style/baseTextView"
				          android:layout_alignParentRight="true"
				          android:layout_centerVertical="true"
				          android:text="未处理"
				          android:textColor="@color/gray333"
				          android:id="@+id/tv_status"
				          android:textSize="13sp"
				/>
			</RelativeLayout>
			<LinearLayout android:layout_width="match_parent"
			              android:layout_height="match_parent"
			              android:layout_marginTop="7.5dp"
			              android:background="@color/white"
			              android:orientation="vertical"
			              android:paddingLeft="@dimen/dp_15"
			              android:paddingTop="22.5dp"
			              android:paddingBottom="22.5dp"
			>
				<TextView style="@style/baseTextView"
				          android:text="下单时间："
				          android:textColor="@color/gray666"
				          android:textSize="@dimen/sp_12"
				          android:id="@+id/tv_create_time"
				/>
				<TextView style="@style/baseTextView"
				          android:text="预约时间："
				          android:textColor="@color/gray666"
				          android:textSize="@dimen/sp_12"
				          android:id="@+id/tv_wait_time"
				          android:layout_marginTop="20dp"
				/>

			</LinearLayout>

			<RelativeLayout style="@style/baseRelative_item"
			                android:layout_marginTop="7.5dp"
			                android:gravity="center_vertical"
			                android:id="@+id/rl_1"
			>
				<TextView style="@style/baseTextView"
				          android:layout_width="80dp"
							android:layout_height="26dp"
                          android:textSize="12sp"
							android:text="确认收货"
				          android:textColor="@color/colorAccent"
				          android:layout_alignParentRight="true"
				          android:gravity="center"
				          android:id="@+id/tv_confirm_receipt"
				          android:background="@drawable/shape_blue_border"
					/>

			</RelativeLayout>
			<android.support.v7.widget.RecyclerView android:id="@+id/recycle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				/>

		</LinearLayout>
	</android.support.v4.widget.NestedScrollView>

</LinearLayout>