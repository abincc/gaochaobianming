<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_header"/>

    <RadioGroup
        android:id="@+id/rg_regist_type"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:weightSum="2">

        <RadioButton
            android:id="@+id/rb_owner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/selector_white_line"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:text="业主注册"
            android:textColor="@color/selector_white_white99"
            android:textSize="@dimen/tv_l_15"/>

        <RadioButton
            android:id="@+id/rb_renter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/selector_white_line"
            android:paddingBottom="3dp"
            android:gravity="center"
            android:text="租客注册"
            android:textColor="@color/selector_white_white99"
            android:textSize="@dimen/tv_l_15"/>

    </RadioGroup>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.cnsunrun.jiajiagou.common.widget.view.HighLightEditText
                android:id="@+id/et_area"
                style="@style/etInput"
                android:layout_marginTop="12dp"
                android:hint="所在小区"
                android:focusable="false"
                app:highLightDrawable="@drawable/sign_icon_position_sel"
                app:normalDrawable="@drawable/sign_icon_position_nor"
                app:rightDrawable="@drawable/help_btn_position_nor"
                />

            <com.cnsunrun.jiajiagou.common.widget.view.HighLightEditText
                android:id="@+id/et_name"
                style="@style/etInput"
                android:layout_marginTop="12dp"
                android:hint="请输入真实姓名"
                app:highLightDrawable="@drawable/sign_icon_name_sel"
                app:normalDrawable="@drawable/sign_icon_name_nor"
                />

            <com.cnsunrun.jiajiagou.common.widget.view.HighLightEditText
                android:id="@+id/et_building_num"
                style="@style/etInput"
                android:layout_marginTop="12dp"
                android:hint="请输入楼号"
                android:maxLength="20"
                app:highLightDrawable="@drawable/sign_icon_floor_sel"
                app:normalDrawable="@drawable/sign_icon_floor_nor"
                />

            <com.cnsunrun.jiajiagou.common.widget.view.HighLightEditText
                android:id="@+id/et_card_num"
                style="@style/etInput"
                android:layout_marginTop="12dp"
                android:hint="请输入身份证号"
                app:highLightDrawable="@drawable/sign_icon_id_sel"
                app:normalDrawable="@drawable/sign_icon_id_nor"
                />

            <com.cnsunrun.jiajiagou.common.widget.view.HighLightEditText
                android:id="@+id/et_room_num"
                style="@style/etInput"
                android:layout_marginTop="12dp"
                android:hint="请输入房号"
                app:highLightDrawable="@drawable/sign_icon_door_sel"
                app:normalDrawable="@drawable/sign_icon_door_nor"
                />

            <com.cnsunrun.jiajiagou.common.widget.view.HighLightEditText
                android:id="@+id/et_phone"
                style="@style/etInput"
                android:layout_marginTop="12dp"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLength="11"
                app:highLightDrawable="@drawable/login_icon_phone_sel"
                app:normalDrawable="@drawable/login_icon_phone_nor"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="12dp"
                android:background="@color/white">

                <Button
                    android:id="@+id/btn_getcode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:text="获取验证码"
                    android:textColor="#3ba4fa"
                    android:textSize="14sp"/>

                <com.cnsunrun.jiajiagou.common.widget.view.HighLightEditText
                    android:id="@+id/et_code"
                    style="@style/etInput"
                    android:layout_marginLeft="0px"
                    android:layout_marginRight="0px"
                    android:layout_toLeftOf="@id/btn_getcode"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    app:highLightDrawable="@drawable/password_icon_verification_sel"
                    app:normalDrawable="@drawable/password_icon_verification_nor"
                    />
            </RelativeLayout>

            <com.cnsunrun.jiajiagou.common.widget.view.HighLightEditText
                android:id="@+id/et_psw"
                style="@style/etInput"
                android:layout_marginTop="12dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                app:highLightDrawable="@drawable/login_icon_password_sel"
                app:normalDrawable="@drawable/login_icon_password_nor"
                app:rightDrawable="@drawable/login_icon_invisible_invisible"
                />


            <com.cnsunrun.jiajiagou.common.widget.view.HighLightEditText
                android:id="@+id/et_invite_code"
                style="@style/etInput"
                android:layout_marginTop="12dp"
                android:hint="请输入业主邀请码"
                android:maxLength="20"
                app:highLightDrawable="@drawable/sign_icon_invite_sel"
                app:normalDrawable="@drawable/sign_icon_invite_nor"
                />

            <Button
                android:id="@+id/btn_regist"
                style="@style/btn_blue_match"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:text="注册"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
