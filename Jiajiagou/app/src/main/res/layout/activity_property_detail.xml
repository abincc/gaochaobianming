<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <include layout="@layout/layout_header"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_confirm">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_20">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:background="#000"
                    app:image_scale_type="center_crop"
                    app:indicator_drawable_selected="@drawable/shape_orange_dot"
                    app:indicator_drawable_unselected="@drawable/shape_white_dot"
                    app:indicator_height="6dp"
                    app:indicator_margin="6dp"
                    app:indicator_width="6dp"/>

                <RelativeLayout
                    style="@style/baseRelative_item"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/baseTextView"
                        android:layout_marginTop="20dp"
                        android:text="保洁"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_status"
                        style="@style/baseTextView"
                        android:layout_alignBottom="@id/tv_name"
                        android:layout_alignParentRight="true"
                        android:text="等待处理"
                        android:textColor="#007eff"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_content"
                    style="@style/baseTextView"
                    android:layout_width="match_parent"
                    android:layout_marginTop="26dp"
                    android:lineSpacingExtra="3dp"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="20dp"
                    android:text=""
                    android:textColor="@color/gray333"
                    android:textSize="12sp"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="26dp"
                    android:background="#e4e4e4"
                    />

                <TextView
                    style="@style/baseTextView"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="申请人信息"
                    android:textColor="@color/gray333"
                    android:textSize="14sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_15"
                    >

                    <TextView
                        android:id="@+id/tv_user"
                        style="@style/baseTextView"
                        android:text="加载中"
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/sp_14"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="#000000"/>

                    <TextView
                        android:id="@+id/tv_building_no"
                        style="@style/baseTextView"
                        android:text="加载中"
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/sp_14"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="#000000"/>

                    <TextView
                        android:id="@+id/tv_room_no"
                        style="@style/baseTextView"
                        android:text="加载中"
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/sp_14"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="19dp"
                    android:background="#e4e4e4"
                    />

                <TextView
                    android:id="@+id/tv_commit_time"
                    style="@style/baseTextView"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="19dp"
                    android:text="提交时间："
                    android:textColor="@color/gray666"
                    android:textSize="@dimen/sp_12"
                    />

                <TextView
                    android:id="@+id/tv_dispose_time"
                    style="@style/baseTextView"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="14.5dp"
                    android:text="处理时间："
                    android:textColor="@color/gray666"
                    android:textSize="@dimen/sp_12"
                    />

                <TextView
                    android:id="@+id/tv_reply_content"
                    style="@style/baseTextView"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="14.5dp"
                    android:text=""
                    android:textColor="@color/gray666"
                    android:textSize="@dimen/sp_12" />

                <com.lzy.ninegrid.NineGridView
                    android:id="@+id/ngv_reply"
                    android:layout_width="match_parent"
                    android:layout_marginTop="14.5dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_height="wrap_content"/>

                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="19dp"
                    android:background="#e4e4e4"
                    />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <Button
            android:id="@+id/btn_confirm"
            style="@style/btn_blue_match"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:text="处理"/>
    </RelativeLayout>
</LinearLayout>
