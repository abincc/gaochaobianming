<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <ImageView
            android:id="@+id/iv_avatar_comment"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:src="@drawable/help_btn_delete_nor"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_avatar_comment"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:textColor="@color/gray333"
                android:textSize="@dimen/sp_15"/>

            <TextView
                android:id="@+id/tv_date_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="xxx"
                android:textColor="@color/gray999"
                android:textSize="13sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_floor_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="xxxxx"
            android:textColor="@color/gray333"
            android:textSize="@dimen/sp_14"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_15"/>

        <LinearLayout
            android:id="@+id/ll_getwidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_reply_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_reply_name_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="回复xxx"
                    android:textColor="#08ce95"
                    android:textSize="@dimen/sp_15"/>

                <TextView
                    android:id="@+id/tv_reply_date_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-02-03"
                    android:textColor="#08ce95"
                    android:textSize="@dimen/sp_14"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_content_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:text="xxx"
                android:textColor="@color/gray333"
                android:textSize="@dimen/sp_15"/>

            <com.lzy.ninegrid.NineGridView
                android:id="@+id/ngv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                app:ngv_gridSpacing="@dimen/dp_10"
                app:ngv_singleImageRatio="1.4"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_btn_reply_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/selector_btn_reply"/>

                    <ImageView
                        android:id="@+id/iv_btn_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"/>

                    <TextView
                        android:id="@+id/tv_likenum_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp_1"
                        android:text=""/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/grayF4"/>


</LinearLayout>