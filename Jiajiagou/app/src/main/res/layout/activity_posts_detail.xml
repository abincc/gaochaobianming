<?xml version="1.0" encoding="utf-8"?>
<com.cnsunrun.jiajiagou.forum.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/fr_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/colorPrimary"
        android:paddingTop="@dimen/header_padding">

        <RelativeLayout
            android:id="@+id/rl_header_50"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/iv_back_plate_detail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:scaleType="center"
                android:src="@drawable/selector_btn_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="详情"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"/>
        </RelativeLayout>
    </FrameLayout>

        <com.cnsunrun.jiajiagou.common.base.CZSwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_below="@+id/fr_header"
            android:layout_above="@+id/ll_bottom_layout"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15">

                        <ImageView
                            android:id="@+id/iv_avatar_detail"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_centerVertical="true"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/iv_avatar_detail"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_name_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="3dp"
                                android:paddingLeft="@dimen/dp_10"
                                android:text=""
                                android:textColor="@color/gray333"
                                android:textSize="@dimen/sp_15"/>

                            <TextView
                                android:id="@+id/tv_plate_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:paddingLeft="@dimen/dp_10"
                                android:text=""
                                android:textColor="#08ce95"
                                android:textSize="13sp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_date_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:text=""
                            android:textColor="@color/gray999"
                            android:textSize="13sp"/>
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/grayF4"/>

                    <TextView
                        android:id="@+id/tv_title_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginTop="16dp"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/sp_18"/>

                    <TextView
                        android:id="@+id/tv_content_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="@dimen/dp_15"
                        android:lineSpacingExtra="8dp"
                        android:text=""
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/sp_15"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycle_content_posts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:visibility="gone"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@color/grayF4"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15">

                        <TextView
                            android:id="@+id/tv_comment_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_5"
                            android:text="评论"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16"/>

                        <TextView
                            android:id="@+id/tv_comment_num_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_comment_detail"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_5"
                                android:text="阅读"
                                android:textColor="@color/gray666"
                                android:textSize="@dimen/sp_14"/>

                            <TextView
                                android:id="@+id/tv_read_num_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_8"
                                android:text=""
                                android:textColor="@color/gray666"
                                android:textSize="@dimen/sp_14"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_8"
                                android:text="|"
                                android:textColor="@color/gray666"
                                android:textSize="@dimen/sp_14"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_5"
                                android:text="点赞"
                                android:textColor="@color/gray666"
                                android:textSize="@dimen/sp_14"/>

                            <TextView
                                android:id="@+id/tv_like_num_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/gray666"
                                android:textSize="@dimen/sp_14"/>
                        </LinearLayout>

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/grayF4"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycle_comment_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"/>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </com.cnsunrun.jiajiagou.common.base.CZSwipeRefreshLayout>



    <LinearLayout
        android:id="@+id/ll_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/shadow"/>

        <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/gray666"/>-->


        <LinearLayout
            android:id="@+id/ll_parent_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#F9F9F9"
            android:orientation="horizontal"
            android:visibility="visible"
            android:paddingRight="@dimen/dp_15">

            <LinearLayout
                android:id="@+id/ll_photo_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/details_btn_img_nor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="图片"
                    android:textColor="@color/gray666"
                    android:textSize="@dimen/sp_11"/>
            </LinearLayout>

            <EditText
                android:id="@+id/et_comment"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_weight="1"
                android:background="@drawable/shape_edit_bg_posts"
                android:hint="输入评论..."
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:textSize="@dimen/sp_12"/>

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:text="发送"
                android:textColor="@color/colorPrimary"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/ll_btn_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/details_btn_good_nor"/>

                <TextView
                    android:id="@+id/tv_like_or_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="点赞"
                    android:textSize="@dimen/sp_11"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_btn_like_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_btn_like_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_btn_good"/>

                <TextView
                    android:id="@+id/tv_like_or_cancel_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="点赞"
                    android:textSize="@dimen/sp_11"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="23dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_btn_share"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="分享"
                    android:textColor="@color/gray666"
                    android:textSize="@dimen/sp_11"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#f1f1f1"/>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_photo_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"/>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</com.cnsunrun.jiajiagou.forum.MyRelativeLayout>

