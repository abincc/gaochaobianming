<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

	<include layout="@layout/layout_header"/>

	<com.cnsunrun.jiajiagou.common.widget.view.HighLightEditText
		android:id="@+id/et_psw"
		style="@style/etInput"
		android:layout_marginTop="12dp"
		android:hint="请输入新密码"
		android:inputType="textPassword"
		android:paddingBottom="10dp"
		android:paddingTop="10dp"
		app:highLightDrawable="@drawable/login_icon_password_sel"
		app:normalDrawable="@drawable/login_icon_password_nor"
		app:rightDrawable="@drawable/login_icon_invisible_invisible"
	/>

	<com.cnsunrun.jiajiagou.common.widget.view.HighLightEditText
		android:id="@+id/et_psw_repeat"
		style="@style/etInput"
		android:layout_marginTop="12dp"
		android:hint="请重新输入密码"
		android:inputType="textPassword"
		android:paddingBottom="10dp"
		android:paddingTop="10dp"
		app:highLightDrawable="@drawable/login_icon_password_sel"
		app:normalDrawable="@drawable/login_icon_password_nor"
		app:rightDrawable="@drawable/login_icon_invisible_invisible"
	/>

	<Button android:id="@+id/btn_confirm"
	        style="@style/btn_blue_match"
	        android:layout_marginTop="20dp"
	        android:text="确定"
	/>
</LinearLayout>