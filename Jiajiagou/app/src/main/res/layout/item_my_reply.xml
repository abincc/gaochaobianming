<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="10dp"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
			  android:background="@color/white"
              android:paddingTop="10dp">

	<TextView android:id="@+id/tv_post_title"
	          style="@style/baseTextView"
	          android:text="这里是帖子标题"
	          android:textColor="@color/gray333"
	          android:textSize="@dimen/tv_xm_14"/>

	<TextView android:id="@+id/tv_reply_content"
	          style="@style/baseTextView"
	          android:layout_marginTop="8dp"
	          android:text="这里是回复内容这里是回复内容这里是回复内容这里是回复内容这里是回复内容这里是回复内容这里是回复内容这里是回复内容这里是回复内容"
	          android:textColor="@color/gray666"
			  android:maxLines="2"
			  android:lineSpacingExtra="3dp"
	          android:textSize="@dimen/tv_s_12"/>

	<TextView android:id="@+id/tv_time"
	          style="@style/baseTextView"
	          android:layout_marginTop="8dp"
	          android:text="2017-6-06"
	          android:textColor="@color/gray999"
	          android:textSize="@dimen/tv_xs_11"/>
</LinearLayout>