<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/selector_base_item"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp_15">

	<CheckBox android:id="@+id/checkbox"
	          style="@style/baseCheckBox"
	          android:layout_height="match_parent"
	          android:layout_centerVertical="true"
	          android:padding="10dp"
	/>
	<ImageView android:id="@+id/iv_imv"
	           android:layout_width="120dp"
	           android:layout_height="100dp"
	           android:layout_marginBottom="@dimen/dp_10"
	           android:layout_marginTop="@dimen/dp_10"
	           android:layout_toRightOf="@+id/checkbox"
	           android:scaleType="centerCrop"
	           android:src="@drawable/icon"
	/>
	<TextView android:id="@+id/tv_name"
	          style="@style/baseTextView"
	          android:layout_alignTop="@+id/iv_imv"
	          android:layout_marginLeft="10dp"
	          android:layout_marginRight="9dp"
	          android:layout_marginTop="6dp"
	          android:layout_toRightOf="@+id/iv_imv"
	          android:ellipsize="end"
	          android:maxLines="2"
	          android:text="墨西哥牛油饼子4个耦合滴滴sdsds"
	          android:textColor="#000000"
	/>
	<TextView android:id="@+id/tv_describe"
	          style="@style/baseTextView"
	          android:layout_alignLeft="@id/tv_name"
	          android:layout_below="@id/tv_name"
	          android:layout_marginTop="9dp"
	          android:text="熟透"
	          android:textColor="@color/gray666"
	/>

	<TextView style="@style/baseTextView"
	          android:layout_alignBottom="@id/iv_imv"
	          android:layout_alignLeft="@id/tv_describe"
	          android:layout_marginBottom="5dp"
	          android:text="¥ 20"
	          android:textStyle="bold"
	          android:textColor="#ff5438"
	          android:textSize="14sp"
	          android:id="@+id/tv_price"
	/>
	<com.cnsunrun.jiajiagou.common.widget.view.AddSubView android:layout_width="wrap_content"
	                                                      android:layout_height="wrap_content"
	                                                      android:layout_alignBottom="@id/iv_imv"
	                                                      android:layout_toRightOf="@+id/iv_imv"
	                                                      android:layout_marginLeft="10dp"
	                                                      android:id="@+id/subview"
	                                                      android:visibility="invisible"
	/>
	<TextView style="@style/baseTextView"
	          android:text="x1"
	          android:layout_alignParentRight="true"
	          android:layout_alignBottom="@id/iv_imv"
	          android:textColor="@color/gray666"
	          android:id="@+id/tv_count"
	          android:layout_marginBottom="5dp"
	/>
</RelativeLayout>